    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.bus.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.example.bus.ui.home.booking.MyBookingFragment"
        android:label="@string/my_booking"
        tools:layout="@layout/fragment_my_booking" />

    <fragment
        android:id="@+id/navigation_money"
        android:name="com.example.bus.ui.help.HelpFragment"
        android:label="@string/help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/navigation_trips"
        android:name="com.example.bus.ui.home.account.MyAccountFragment"
        android:label="@string/my_account"
        tools:layout="@layout/fragment_my_account" />

